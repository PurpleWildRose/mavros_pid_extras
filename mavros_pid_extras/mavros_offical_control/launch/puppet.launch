<arg name="fcu_url"/>
<arg name="gcs_url"/>
<arg name="tgt_system"/>
<arg name="tgt_component"/>
<arg name="pluginlists_yaml"/>
<arg name="config_yaml"/>
<arg name="log_output"/>
<arg name="fcu_protocol"/>
<arg name="respawn_mavros" default="true"/>

<node pkg="mavros" type="mavros_node" name="mavros" required="$(eval not respawn_mavros)" clear_params="true" output="$(arg log_output)" respawn="$(arg respawn_mavros)">
    <param name="fcu_url" value="$(arg fcu_url)"/>
    <param name="gcs_url" value="$(arg gcs_url)"/>
    <param name="tgt_system" value="$(arg tgt_system)"/>
    <param name="tgt_component" value="$(arg tgt_component)"/>
    <param name="fcu_protocol" value="$(arg fcu_component)"/>
    
    <rosparam command="load" file="$(arg pluginlists_yaml)"/>
    <rosparam command="load" file="$(arg config_yaml)"/>
</node>